#!/usr/bin/env bash

OPTIND=1;  # Reset in case getopts has been used previously in the shell.

PORT=6924;
while getopts ":p:" opt; do
  case ${opt} in
    p )
      PORT=$OPTARG
      ;;
    \? )
      echo "Invalid option: $OPTARG" 1>&2;
      exit 1;
      ;;
    : )
      echo "Invalid option: $OPTARG requires an argument" 1>&2;
      exit 1;
      ;;
  esac
done
shift $((OPTIND -1))


#!/usr/bin/env bash

umask 007;
execDir=$(dirname $0);
cd "$execDir/../ta/grading";
HOST="0.0.0.0"
"$execDir/../ta/venv/bin/gunicorn" --bind "$HOST:$PORT" --certfile "$execDir/../ta/cert.pem" --keyfile "$execDir/../ta/key.pem" grading_app:app;
